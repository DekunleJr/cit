<%- include('includes/head.ejs') %>
  <body>

    <%- include('includes/nav.ejs') %>
      
      <section class="probootstrap-section probootstrap-section-colored">
        <div class="container">
          <div class="row">
            <div class="col-md-12 text-left section-heading probootstrap-animate">
              <h1>Our Instructors</h1>
            </div>
          </div>
        </div>
      </section>

      <section class="probootstrap-section">
        <div class="row">
          <% if (teachers.length === 0) { %>
            <div class="col-md-3 col-sm-6">
              <div class="text">
                <h3>No Teacher registered </h3>
              </div>
            </div>
          <% } else { %>
          <% teachers.forEach(teacher => { %>
            <div class="col-md-3 col-sm-6">
              <div class="probootstrap-teacher text-center probootstrap-animate">
                <figure class="media">
                  <img src="<%= teacher.imgUrl %>" alt="<%= teacher.name %>" class="img-responsive" id="teacher_image">
                </figure>
                <div class="text">
                  <h3><%= teacher.name %></h3>
                  <p><%= teacher.profession %></p>
                  <p>(<%= teacher.position %>)</p>
                  <ul class="probootstrap-footer-social">
                    <li class="twitter"><a href="<%= teacher.portUrl %>"><i class="icon-linkedin"></i></a></li>
                  </ul>
                </div>
                <% if (isAuthenticated && userRole==='admin' ) { %>
                  <form action="/delete-teacher" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="hidden" value="<%= teacher._id %>" name="teacherId">
                    <button class="btn btn-primary" type="submit">Delete</button>
                  </form>
                <% } %>
              </div>
            </div>
          <% }); %>
          <% } %>
        </div>
        
      </section>
      
      
      <%- include('includes/footer.ejs') %>

    </div>
    <!-- END wrapper -->
    

<%- include('includes/end.ejs') %>