<%- include('includes/head.ejs') %>

    <body>
        <%- include('includes/nav.ejs') %>
            <main>
                <div class="container_2">
                    <section class="form">
                        <div>
                            <h2>Signup</h2>
                        </div>
                        <% if (errorMessage) { %>
                            <div class="input-group">
                                <p><%= errorMessage %></p>
                            </div>
                        <% } %>
                        <form action="/signup" method="POST">
                            
                            <input type="text" placeholder="Input your Firstname" id="firstname" name="firstname" value="<%= oldInput.firstname %>" required><br>
                        
                            <input type="text" placeholder="Input your Lastname" id="lastname" name="lastname" value="<%= oldInput.lastname %>" required><br>
                        
                            <input type="email" placeholder="Input your Email" id="email" name="email" value="<%= oldInput.email %>" required><br>

                            <div class="form-group mb-4">
                                <div class="password-input-wrapper">
                                    <input
                                    type="password"
                                    class="form-control form-control-lg"
                                    placeholder="Input your Password"
                                    name="password"
                                    id="password"
                                    value=""
                                    required
                                    aria-label="Password"
                                    >
                                    <button class="password-toggle-btn" type="button" id="togglePassword" aria-label="Show password">
                                    <i class="fas fa-eye" aria-hidden="true"></i>
                                    </button>
                                </div>
                            </div>
                        
                            <div class="form-group mb-4">
                                <div class="password-input-wrapper">
                                    <input
                                    type="password"
                                    class="form-control form-control-lg"
                                    placeholder="Confirm your Password"
                                    name="confirm_password"
                                    id="confirm_password"
                                    value=""
                                    required
                                    aria-label="Password"
                                    >
                                    <button class="password-toggle-btn" type="button" id="toggleConfirmPassword" aria-label="Show password">
                                    <i class="fas fa-eye" aria-hidden="true"></i>
                                    </button>
                                </div>
                            </div>
                            
                            <select id="type" name="type" class="mb-2" required>
                                <option value="" disabled selected>Select your type</option>
                                <option value="student">Student</option>
                                <option value="requires_service">Requires a Service</option>
                            </select><br>
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button class="btn btn-primary btn-lg btn-ghost probootstrap-animate" type="submit">Sign Up</button>
                        </form>

                    </section>

                </div>
            </main>

<%- include('includes/footer.ejs') %>
            <%- include('includes/end.ejs') %>