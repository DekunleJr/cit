<%- include('includes/head.ejs') %>

    <body>

        <%- include('includes/nav.ejs') %>

            <section class="probootstrap-section probootstrap-section-colored">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12 text-left section-heading probootstrap-animate">
                            <h1>Our services</h1>
                        </div>
                    </div>
                </div>
            </section>

            <section class="probootstrap-section">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="probootstrap-flex-block">
                                <div class="probootstrap-text probootstrap-animate">
                                    <div class="text-uppercase probootstrap-uppercase">Services Rendered</div>
                                    <% if (service.length===0) { %>
                                        <h3>No service available</h3>
                                        <p>Check back again some other time for list of available services</p>
                                        <% } else { %>
                                            <h3>
                                                <%= service[service.length - 1].title %>
                                            </h3>
                                            <p>
                                                <%= service[service.length - 1].description %>
                                            </p>
                                            <% } %>
                                                <p><a href="/contact" class="btn btn-primary">Sechdule Meeting Now</a>
                                                </p>
                                </div>
                                <div class="probootstrap-image probootstrap-animate">
                                    <iframe src="https://player.vimeo.com/video/1047086351?h=5ecfbf73fc&autoplay=1&mute=1&loop=1" width="650" height="500"
                                        frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section class="probootstrap-section">
                <div class="container">
            
                    <div class="row">
                        <% if (service.length===0) { %>
                            <div class="col-md-4 col-sm-6 col-xs-6 col-xxs-12 probootstrap-animate">
                                <h3>No course available</h3>
                                <p>check again later for more update on crown Institute of Technology.</p>
                            </div>
                        <% } else { %>
                            <% service.forEach(n=> { %>
                                <div class="col-md-4 col-sm-6 col-xs-6 col-xxs-12 probootstrap-animate">
        
                                    <figure class="probootstrap-media try_2"><img id="myImage" src="<%= n.imgUrl %>"
                                            alt="<%= n.title %>" class="img-responsive"></figure>
                                    <div class="probootstrap-text course_d">
                                        <h3>
                                            <%= n.title %>
                                        </h3>
                                        <p>
                                            <%= n.description %>
                                        </p>
                                        <p><a href="/contact" class="btn btn-primary">Sechdule Meeting Now</a>
                                        <% if (isAuthenticated && userRole==='admin' ) { %>
                                            <form action="/delete-service" method="POST">
                                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                <input type="hidden" value="<%= n._id %>" name="serviceId">
                                                <button class="btn btn-primary" type="submit">Delete</button>
                                            </form>
                                        <% } %>
                                    </div>
        
                                </div>
                                <div class="clearfix visible-sm-block visible-xs-block">
                                    
                                </div>
        
                            <% }); %>
                        <% } %>
            
                    </div>
            
                </div>
            </section>



            <section class="probootstrap-section probootstrap-section-colored probootstrap-bg probootstrap-custom-heading probootstrap-tab-section" style="background-image: url(img/slider_2.jpg); height: 300px;">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3 text-center section-heading probootstrap-animate">
                            <h2>Meet Our Able Staff</h2>
                            <p class="lead">Our seasoned professionals and industry leaders provide unparalleled services, leveraging their expertise to drive
                            results and deliver value to our clients.</p>
                        </div>
                    </div>
                        <!-- END row -->
                </div>
            </section>

            <section class="probootstrap-section">
                <div class="container">

                    <div class="row">
                        <% if (teachers.length===0) { %>
                            <div class="col-md-3 col-sm-6">
                                <p>No Teacher registered.</p>
                            </div>
                        <% } else { %>
                            <% teachers.forEach(teacher=> { %>
                                <div class="col-md-3 col-sm-6">
                                    <div class="probootstrap-teacher text-center probootstrap-animate" id="teacher">
                                        <figure class="media">
                                            <img src="<%= teacher.imgUrl %>" alt="<%= teacher.name %>" class="img-responsive" id="teacher_image">
                                        </figure>
                                        <div class="text">
                                            <h3><%= teacher.name %></h3>
                                            <p><%= teacher.profession %></p>
                                            <p>(<%= teacher.position %>)</p>
                                            <ul class="probootstrap-footer-social">
                                                <li class="twitter"><a href="<%= teacher.portUrl %>"><i class="icon-linkedin"></i></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix visible-sm-block visible-xs-block"></div>
                            <% }); %>
                        <% } %>
                    </div>
                </div>
            </section>
            <%- include('includes/footer.ejs') %>

        </div>
                <!-- END wrapper -->


        <%- include('includes/end.ejs') %>