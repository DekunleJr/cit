<%- include('includes/head.ejs') %>
  <body>

    <%- include('includes/nav.ejs') %>
      
      <section class="probootstrap-section probootstrap-section-colored">
        <div class="container">
          <div class="row">
            <div class="col-md-12 text-left section-heading probootstrap-animate">
              <h1>Information Center</h1>
            </div>
          </div>
        </div>
      </section>

      <section class="probootstrap-section">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <div class="probootstrap-image probootstrap-animate">
                <video id="myVideo_2" width="400" controls muted autoplay loop>
                  <source src="video/intro_video.mp4" type="video/mp4">
                  Your browser does not support the video tag.
                </video>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section class="probootstrap-section">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <div class="probootstrap-flex-block">
                <div class="probootstrap-text probootstrap-animate">
                  <div class="text-uppercase probootstrap-uppercase">Featured News</div>
                    <% if (news.length === 0) { %>
                      <h3>No news available</h3>
                      <p>check again later for more update on crown Institute of Technology</p>
                    <% } else { %>
                    <h3><%= news[news.length - 1].title %></h3>
                    <p><%= news[news.length - 1].description %></p>
                    <p>
                      <span class="probootstrap-date"><i class="icon-calendar"></i><%= news[news.length - 1].date %></span>
                      <span class="probootstrap-location"><i class="icon-user2"></i>By <%= news[news.length - 1].position %></span>
                    </p>
                    <p><a href="#" class="btn btn-primary">Learn More</a></p>
                    <% } %>
                  </div>
                <div class="probootstrap-image probootstrap-animate">
                  <video id="myVideo" width="600" controls muted autoplay loop>
                    <source src="video/intro_video.mp4" type="video/mp4">
                    Your browser does not support the video tag.
                  </video>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>


      
      
      <section class="probootstrap-section"> 
        <div class="container">

          <div class="row">
            <% if (news.length === 0) { %>
              <div class="col-md-4 col-sm-6 col-xs-6 col-xxs-12 probootstrap-animate">
                <h3>No news available</h3>
                <p>check again later for more update on crown Institute of Technology.</p>
              </div>
            <% } else { %>
              <% news.forEach(n => { %>
                <div class="col-md-4 col-sm-6 col-xs-6 col-xxs-12 probootstrap-animate">
                  <a href="#" class="probootstrap-featured-news-box">
                    <figure class="probootstrap-media"><img id="myImage" src="<%= n.imgUrl %>" alt="<%= n.title %>" class="img-responsive"></figure>
                    <div class="probootstrap-text">
                      <h3><%= n.title %></h3>
                      <p><%= n.description %></p>
                      <span class="probootstrap-date"><i class="icon-calendar"></i><%= n.date %></span>
                      <span class="probootstrap-location"><i class="icon-user2"></i>By <%= n.position %></span>
                    </div>
                  </a>
                  <% if (isAuthenticated && userRole==='admin' ) { %>
                    <form action="/delete-news" method="POST">
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <input type="hidden" value="<%= n._id %>" name="newsId">
                      <button class="btn btn-primary" type="submit">Delete</button>
                    </form>
                  <% } %>
                </div>
                <div class="clearfix visible-sm-block visible-xs-block"></div>

              <% }); %>
            <% } %>
            
          </div>

        </div>
      </section>
      
     
      <%- include('includes/footer.ejs') %>

    </div>
    <!-- END wrapper -->
    

<%- include('includes/end.ejs') %>